---
import { Icon } from 'astro-icon/components';
import {
	AnnouncementBar,
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	YouTubeEmbedSection,
	StickyTextImageSection,
	CtaCardSection,
} from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
	title: 'Soulful Conversations Collective | The In Flow Podcast Network',
	description: 'Soulful Conversations Collective Podcast',
};
---

<Layout {seo}>
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Subscribe by copying and pasting this link into your favorite podcast player</h1>
			<p id="rssid">https://cryochasm.github.io/rss/soulful-conversations-collective.xml</p>
		</div>
		<div slot="btns-container">
			<Button onclick="myFunction()" customIcon
				>Copy Link <Fragment slot="icon">
					<Icon name="ic:baseline-chevron-right" />
				</Fragment></Button
			>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/soulful-conversations-collective.png"
				alt="Soulful Conversations Collective"
				id="home-hero-image"
			/>
		</picture>
	</TextAndImageHero>

	<script>
	function myFunction() {
	  // Get the text field
	  var copyText = document.getElementById("rssid");
	
	  // Select the text field
	  copyText.select();
	  copyText.setSelectionRange(0, 99999); // For mobile devices
	
	   // Copy the text inside the text field
	  navigator.clipboard.writeText(copyText.value);
	
	  // Alert the copied text
	  alert("Copied the text: " + copyText.value);
	} 
	
	</script>
</Layout>
