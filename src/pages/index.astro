---
import { Container, FeatureCard } from '@components/odyssey-theme';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section">
			<h2>Podcasts</h2>
			<p>
				Subscribe to our podcasts using your favorite podcast app.
			</p>
			<div class="feature-card__grid">
				<FeatureCard href="/landing-pages/the-spectrum-within" title="The Spectrum Within" imgSrc="/assets/images/the-spectrum-within-square">
				</FeatureCard>
				<FeatureCard href="/landing-pages/soulful-conversations-collective" title="Soulful Conversations Collective" imgSrc="/assets/images/soulful-conversations-collective">
				</FeatureCard>
			</div>
		</section>
	</Container>

</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
